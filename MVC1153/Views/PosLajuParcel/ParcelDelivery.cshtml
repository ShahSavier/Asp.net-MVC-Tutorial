@model MVC1153.Models.PosLajuParcel;

<head>
    <title> Pos Laju Form </title>
    <link href="~/css/PostLaju.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm())
    {
        // Trigger pop up validation
        <!--
          validation for all form
            => Html.ValidationSummary()
          Validation for part by part (property)
            => Html.ValidationMessageFor(x => x.????)
        -->
        <!-- Sender Properties -->
        <h5> Sender Information </h5>
        <p>
            <label> Sender Name : </label>
            @Html.TextBoxFor(x => x.SenderName)
            @Html.ValidationMessageFor(x => x.SenderName)
        </p>
        <p>
            <label> Sender Address : </label>
            @Html.TextAreaFor(x => x.SenderAddress)
            @Html.ValidationMessageFor(x => x.SenderAddress)
        </p>
        <p>
            <label> Sender Phone : </label>
            @Html.TextBoxFor(x => x.SenderPhone)
            @Html.ValidationMessageFor(x => x.SenderPhone)
        </p>
        <p>
            <label> Sender Email : </label>
            @Html.TextBoxFor(x => x.SenderEmail)
        </p>
        <!-- End Of Sender Properties -->

        <!-- Receiver Properties -->
        <h5> Receiver Information </h5>
        <p>
            <label> Receiver Name : </label>
            @Html.TextBoxFor(x => x.ReceiverName)
            @Html.ValidationMessageFor(x => x.ReceiverName)
        </p>
        <p>
            <label> Receiver Address : </label>
            @Html.TextAreaFor(x => x.ReceiverAddress)
            @Html.ValidationMessageFor(x => x.ReceiverAddress)
        </p>
        <p>
            <label> Receiver Phone : </label>
            @Html.TextBoxFor(x => x.ReceiverPhone)
            @Html.ValidationMessageFor(x => x.ReceiverPhone)
        </p>
        <p>
            <label> Receiver Email : </label>
            @Html.TextBoxFor(x => x.ReceiverEmail)
        </p>
        <!-- End Of Receiver Properties -->

        <!-- Parcel Information Properties -->
        <h5> Parcel Information </h5>
        <p>
            <label> Weight : </label>
            <!--Using dropdown and link with dictionary-->
            @Html.DropDownListFor(x => x.IndexWeight, new SelectList(Model.DictWeight, "Key", "Value"), "Select Weight")<!-- DicWeight tu adalah Dictionary  -->
            @Html.ValidationMessageFor(x => x.IndexWeight)
        </p>
        <p>
            <label> Zone : </label>
            <!--Using dropdown and link with dictionary-->
            @Html.DropDownListFor(x => x.IndexZone, new SelectList(Model.DictZone, "Key", "Value"), "Select Zone") <!-- Third parameter "Select Zone" for drop down list by default, user need to choise-->
            @Html.ValidationMessageFor(x => x.IndexZone)
        </p>
        <!-- End Of Receiver Properties -->

        <p>
            <input type="submit" value="Submit" />
        </p>
    }
</body>